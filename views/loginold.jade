extends ./template.jade

block content
  div.container
    h1(class="red error") #{error}
    h1(class="green success") #{success}
    h1 Sign In
    form(action="/postSignIn",method="POST")
      .input-field
        input(type='email', name='email')
        label(for='email', style='') Email
      .input-field
        input(type='password', name='password')
        label(for='password', style='') Password

      input(type='submit', value="submit", class="btn")
    h1 Sign Up
    form(action="/postSignUp",method="POST")
        .input-field
          input(type='email', name='email')
          label(for='email', style='') Email
        .input-field
          input(type='password', name='password')
          label(for='password', style='') Password

        input(type='submit', value="submit", class="btn")
    h1
      a(href="/logout") Log Out

    h1
      a(href="/userdash") User Dashboard

    h1
      a(href="/admin") Admin Dashboard
